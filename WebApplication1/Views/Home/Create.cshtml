@model WebApplication1.Models.Lead
@{
    ViewBag.Title = "Додати Ліда";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Ім'я</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Прізвище</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CompanyLink" class="control-label">Ссилка на компанію</label>
        <input type="text" asp-for="CompanyLink" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="control-label">Можлива сума угоди</label>
        <input type="number" asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Відправити" class="btn btn-default" />
    </div>
</form>