@model WebApplication1.Models.Lead
@{
    ViewBag.Title = "Видалити ліда";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Ім'я</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
 
        <dt>Прізвище</dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>Ссилка на компанію</dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyLink)
        </dd>
        <dt>Можлива сума угоди</dt>
        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>
    </dl>
 
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>